<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="36dp"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by Sarath Sattiraju"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/poweredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Powered by "
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/newsapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.newsapi.org"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="14sp"
            android:layout_alignBaseline="@id/poweredBy"
            android:layout_toRightOf="@id/poweredBy"
            android:layout_toEndOf="@id/poweredBy"
            android:textColor="@android:color/holo_red_dark"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="Icon made by "
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pixelkit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PixelKit"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="14sp"
            android:layout_alignBaseline="@id/icon"
            android:layout_toRightOf="@id/icon"
            android:layout_toEndOf="@id/icon"
            android:textColor="@android:color/holo_red_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="from "
        android:textSize="14sp"
        android:textStyle="bold"/>


        <TextView
            android:id="@+id/iconarchive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.iconarchive.com"
            android:textSize="14sp"
            android:layout_alignBaseline="@id/web"
            android:layout_toRightOf="@id/web"
            android:layout_toEndOf="@id/web"
            android:textColor="@android:color/holo_red_dark"/>

    </RelativeLayout>

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="OK"/>


</LinearLayout>
</RelativeLayout>